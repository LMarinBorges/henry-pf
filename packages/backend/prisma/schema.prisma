generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  name        String
  description String?
  imageUrl    String
  price       Decimal
  stock       Int
  brand       String
  category    String
  isDeleted   Boolean @default(false)
}
